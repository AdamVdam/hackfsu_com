extends ../../../_pug/userLayout.pug

block vars
    -
        var pageName = "User Profile"
        var viewDir = "/static/views/user/profile"

block append styles
    link(rel="stylesheet" type="text/css" href=`${viewDir}/style.css`)

block append scripts
    script(src=`${viewDir}/script.js`)

block content
    h1.text-center HackFSU '17
    .profile-action-buttons
        button#hackerBtn.btn.btn-form(type="button" disabled)  Hacker Registration
        button#mentorBtn.btn.btn-form(type="button" disabled title="Coming soon")  Mentor Registration
        button#judgeBtn.btn.btn-form(type="button" disabled title="Coming soon")  Judge Registration
        button#organizerBtn.btn.btn-form(type="button" disabled title="Coming soon")  Organizer Registration

    .profile-section
        h1 Account
        form#account: .form-section
            fieldset.row
                label.col-md-3 Email
                .col-md-9: input.responsive(type="email" name="email" maxlength=100 placeholder="your@school.edu" disabled)
            fieldset.row
                label.col-md-3 First Name
                .col-md-9: input.responsive(type="text" name="first_name" maxlength=100 placeholder="John" disabled)
            fieldset.row
                label.col-md-3 Last Name
                .col-md-9: input.responsive(type="text" name="last_name" maxlength=100 placeholder="Doe" disabled)
            fieldset.row
                label.col-md-3 Phone Number
                .col-md-9: input.responsive(type="tel" name="phone" maxlength=20 minlength=10 data-parsley-type="digits" placeholder="850-867-5309" disabled)
            fieldset.row
                label.col-md-3 Shirt Size
                .col-md-9: select.responsive(name="shirt_size" disabled)
                    option(value="" disabled selected)
                    each val, key in locals.shirt_size_choices
                        option(value=`${key}`)=val
            fieldset.row
                label.col-md-3 Github
                .col-md-9: input.responsive(type="text" name="github" maxlength=100 placeholder="None" disabled)
            fieldset.row
                label.col-md-3 LinkedIn
                .col-md-9: input.responsive(type="url" name="linkedin" maxlength=100 data-parsley-type="url" placeholder="None" disabled)
            fieldset.row
                label.col-md-3 Dietary Restrictions
                .col-md-9: input.responsive(type="text" name="diet" maxlength=100 placeholder="None" disabled)

    .profile-section(style="display:none")
        h1 Hacker Info

    .profile-section(style="display:none")
        h1 Mentor Info

    .profile-section(style="display:none")
        h1 Judge Info

    .profile-section(style="display:none")
        h1 Organizer Info
